pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'pavanthumati/flaskusingdockerwithjenkins:latest'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url:'https://github.com/PavanThumati/Training.git',branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Push Docker Image') {
            steps {
                withDockerRegistry([credentialsId: '83e2b9a9-fed9-4cf2-b6ea-a0dffd78a705', url: 'https://index.docker.io/v1/']) {
                    sh 'docker push $DOCKER_IMAGE'
                }
            }
        }
    }
}
